{
  "compilerOptions": {
    "module": "node16",
    "target": "ES2022",
    "lib": ["es2022", "dom"],
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tno-terminology-design/*": ["*/src"]
    },
    "noEmit": true
  },
  "references": [
    {
      "path": "./utils"
    },
    {
      "path": "./mrgt"
    },
    {
      "path": "./trrt"
    },
    {
      "path": "./mrg-import"
    },
    {
      "path": "./hrgt"
    }
  ],
  "exclude": ["node_modules", "lib"]
}
